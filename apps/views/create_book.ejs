<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Required meta tags-->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="au theme template">
    <meta name="author" content="Hau Nguyen">
    <meta name="keywords" content="au theme template">

    <!-- Title Page-->
    <title>Staff page</title>

    <!-- Fontfaces CSS-->
    <link href="../static/css/font-face.css" rel="stylesheet" media="all">
    <link href="../static/vendor/font-awesome-4.7/css/font-awesome.min.css" rel="stylesheet" media="all">
    <link href="../static/vendor/font-awesome-5/css/fontawesome-all.min.css" rel="stylesheet" media="all">
    <link href="../static/vendor/mdi-font/css/material-design-iconic-font.min.css" rel="stylesheet" media="all">

    <!-- Bootstrap CSS-->
    <link href="../static/vendor/bootstrap-4.1/bootstrap.min.css" rel="stylesheet" media="all">

    <!-- Vendor CSS-->
    <link href="../static/vendor/animsition/animsition.min.css" rel="stylesheet" media="all">
    <link href="../static/vendor/bootstrap-progressbar/bootstrap-progressbar-3.3.4.min.css" rel="stylesheet" media="all">
    <link href="../static/vendor/wow/animate.css" rel="stylesheet" media="all">
    <link href="../static/vendor/css-hamburgers/hamburgers.min.css" rel="stylesheet" media="all">
    <link href="../static/vendor/slick/slick.css" rel="stylesheet" media="all">
    <link href="../static/vendor/select2/select2.min.css" rel="stylesheet" media="all">
    <link href="../static/vendor/perfect-scrollbar/perfect-scrollbar.css" rel="stylesheet" media="all">

    <!-- Main CSS-->
    <link href="../static/css/theme.css" rel="stylesheet" media="all">

</head>

<body class="animsition">
    <div class="page-wrapper">
        <%- include staff/menu%>

        <!-- PAGE CONTAINER-->
        <div class="page-container">
            
            <%- include staff/header_user%>
            <!-- MAIN CONTENT -->
            <div class="main-content">
                    <div class="container">
                            <div id="signupbox" style="margin-top:50px" class="mainbox col-md-8 col-md-offset-2 col-sm-8 col-sm-offset-2">
                                <div class="panel panel-info">
                                    <div class="panel-heading">
                                        <div class="panel-title">Create Book</div>
                                    </div>
                                    <div class="panel-body" >
                                        <form id="signupform" class="form-horizontal" role="form" method="POST" action="/staff/create_book" enctype="multipart/form-data">
                    
                                            <div id="signupalerterror" style="<%if (!data || !data.error){%>display:none<%}%>" 
                                                class="alert alert-danger">
                                                    <p><strong>Error:</strong></p>
                                                    <%if (data && data.error){%>
                                                    <p><%- data.error%></p>
                                                    <%}%>
                                                </div>
                        
                                                <div id="signupalertsuccess" style="<%if (!data || !data.success){%>display:none<%}%>" 
                                                class="alert alert-success">
                                                    <p><strong>Success:</strong></p>
                                                    <p><%= data.success%></p>
                                                </div>
                                            <div class="form-group">
                                                <label for="id_sach" class="col-md-3 control-label">ID sách</label>
                                                <div class="col-md-9">
                                                    <input type="text" class="form-control" name="id_sach" placeholder="ISxxxx">
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label for="ten_sach" class="col-md-3 control-label">Tên sách</label>
                                                <div class="col-md-9">
                                                    <input type="text" class="form-control" name="ten_sach" placeholder="Tên sách">
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label for="the_loai" class="col-md-3 control-label">Thể loại</label>
                                                <div class="col-md-3">
                                                    <select name="the_loai" class="form-control">
                                                        <% items.tl.forEach(function(i){ %>
                                                        <option value="<%= i.id_the_loai %>"><%= i.ten_the_loai %></option>
                                                        <% }) %>
                                                    </select>
                                                </div>
                                            </div>
                    
                                            <div class="form-group">
                                                <label for="tac_gia" class="col-md-3 control-label">Tác giả</label>
                                                <div class="col-md-3">
                                                    <select name="tac_gia" class="form-control">
                                                            <% items.tg.forEach(function(i){ %>
                                                                <option value="<%= i.id_tac_gia %>"><%= i.ten_tac_gia %></option>
                                                                <% }) %>
                                                    </select>
                                                </div>
                                            </div>
                    
                                            <div class="form-group">
                                                <label for="nha_xuat_ban" class="col-md-3 control-label">Nhà xuất bản</label>
                                                <div class="col-md-3">
                                                    <select name="nha_xuat_ban" class="form-control">
                                                            <% items.nxb.forEach(function(i){ %>
                                                                <option value="<%= i.ten_nxb %>"><%= i.ten_nxb %></option>
                                                                <% }) %>
                                                    </select>
                                                </div>
                                            </div>
                                        
                                            
                    
                                            <div class="form-group">
                                                <label for="nam_xuat_ban" class="col-md-3 control-label">Năm xuất bản</label>
                                                <div class="col-md-9">
                                                    <input type="number" class="form-control" name="nam_xuat_ban" placeholder="yyyy">
                                                </div>
                                            </div>
                    
                                            <div class="form-group">
                                                <label for="khuyen_mai" class="col-md-3 control-label">Khuyến mãi</label>
                                                <div class="col-md-9">
                                                    <input type="number" class="form-control" name="khuyen_mai" placeholder="0-100">
                                                </div>
                                            </div>
                    
                                            <div class="form-group">
                                                <label for="gia" class="col-md-3 control-label">Giá</label>
                                                <div class="col-md-9">
                                                    <input type="number" class="form-control" name="gia" placeholder="Giá sách">
                                                </div>
                                            </div>
                    
                                            <div class="form-group">
                                                <label for="so_luong_ton" class="col-md-3 control-label">Số lượng tồn</label>
                                                <div class="col-md-9">
                                                    <input type="number" class="form-control" name="so_luong_ton" placeholder="Số lượng tồn của sách">
                                                </div>
                                            </div>
                    
                                            <div class="form-group">
                                                <label for="doc_truoc" class="col-md-3 control-label">Đọc trước</label>
                                                <div class="col-md-9">
                                                    <input type = "text" class="form-control" name="doc_truoc" placeholder="Nội dung đọc trước">
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                    <label for="doc_truoc" class="col-md-3 control-label">Thêm hình</label>
                                                    <div class="col-md-9">
                                                        <input type = "file" class="form-control" name="file">
                                                    </div>
                                                </div>
                    
                                            <div class="form-group">
                                                <!-- Button -->
                                                <div class="col-md-offset-3 col-md-9">
                                                    <input id="btn-signup" type="submit" class="btn btn-info" value="Sign Up" />
                                                </div>
                                            </div>
                    
                                       <!--     <div class="form-group">
                                                <div class="col-md-offset-3 col-md-9">
                                                    <a href= "/staff/create_publisher" target="_blank"><input id="btn-create-category" type="button" class="btn btn-info" value="Nhà xuất bản mới"/></a>
                                                </div>
                                            </div> -->
                    
                                        </form>
                                     </div>
                                </div>
                    
                             </div>
                        </div>
            </div>
            <!-- END MAIN CONTENT-->
        </div>

    </div>

    <!-- Jquery JS-->
    <script src="../static/vendor/jquery-3.2.1.min.js"></script>
    <!-- Bootstrap JS-->
    <script src="../static/vendor/bootstrap-4.1/popper.min.js"></script>
    <script src="../static/vendor/bootstrap-4.1/bootstrap.min.js"></script>
    <!-- Vendor JS       -->
    <script src="../static/vendor/slick/slick.min.js">
    </script>
    <script src="../static/vendor/wow/wow.min.js"></script>
    <script src="../static/vendor/animsition/animsition.min.js"></script>
    <script src="../static/vendor/bootstrap-progressbar/bootstrap-progressbar.min.js">
    </script>
    <script src="../static/vendor/counter-up/jquery.waypoints.min.js"></script>
    <script src="../static/vendor/counter-up/jquery.counterup.min.js">
    </script>
    <script src="../static/vendor/circle-progress/circle-progress.min.js"></script>
    <script src="../static/vendor/perfect-scrollbar/perfect-scrollbar.js"></script>
    <script src="../static/vendor/chartjs/Chart.bundle.min.js"></script>
    <script src="../static/vendor/select2/select2.min.js">
    </script>

    <!-- Main JS-->
    <script src="../static/js/main_admin.js"></script>

</body>

</html>
<!-- end document-->
<div class="main-content">
    <div id="signupbox" style="margin-top:50px" class="mainbox col-md-8 col-md-offset-2 col-sm-8 col-sm-offset-2">
        <div class="panel panel-info">
            <div class="panel-heading">
                <div class="panel-title">Create Publisher</div>
            </div>
            <div class="panel-body">
                <form id="signupform" class="form-horizontal" role="form" method="POST" action="/staff/create_publisher">

                    <div id="signupalerterror" style="<%if (!data || !data.error){%>display:none<%}%>" class="alert alert-danger">
                        <p>
                            <strong>Error:</strong>
                        </p>
                        <%if (data && data.error){%>
                            <p>
                                <%- data.error%>
                            </p>
                            <%}%>
                    </div>

                    <div id="signupalertsuccess" style="<%if (!data || !data.success){%>display:none<%}%>" class="alert alert-success">
                        <p>
                            <strong>Success:</strong>
                        </p>
                        <p>
                            <%= data.success%>
                        </p>
                    </div>

                    <div class="form-group">
                        <label for="ten_nxb" class="col-md-3 control-label">Tên nhà xuất bản</label>
                        <div class="col-md-9">
                            <input type="text" class="form-control" name="ten_nxb" placeholder="Tên nhà xuất bản">
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="nam_thanh_lap" class="col-md-3 control-label">Năm thành lập</label>
                        <div class="col-md-9">
                            <input type="number" class="form-control" name="nam_thanh_lap" placeholder="yyyy">
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="dia_chi" class="col-md-3 control-label">Địa chỉ</label>
                        <div class="col-md-9">
                            <input type="text" class="form-control" name="dia_chi" placeholder="Địa chỉ">
                        </div>
                    </div>


                    <div class="form-group">
                        <!-- Button -->
                        <div class="col-md-9 col-md-offset-3">
                            <input id="btn-create" type="submit" class="btn btn-info" value="Create" />
                            <a href="">
                                <input id="btn-cancel" type="button" class="btn btn-info" value="Cancel" />
                            </a>
                        </div>
                    </div>
                </form>
            </div>
        </div>

    </div>
</div>

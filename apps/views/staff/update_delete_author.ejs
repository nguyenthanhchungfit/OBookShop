    <% items.forEach(function(item){%>
        <div class="col-sm-4">
            <div class="product-image-wrapper">
                <div class="single-products">
                    <div class="productinfo text-center" id="<%= item.id_tac_gia%>">
                        <a href="/author/<%= item.id_tac_gia%>">
                            <img alt="" height="300" />
                        </a>
                        <h2><%= item.ten_tac_gia%></h2>
